<% content_for :title, "My Orders - Swimi" %>

<div class="container py-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
          <i class="fas fa-shopping-bag me-2"></i>My Orders
          <span class="badge bg-secondary"><%= @orders.total_count %></span>
        </h1>
        <%= link_to "Continue Shopping", products_path, class: "btn btn-primary" %>
      </div>

      <% if @orders.any? %>
        <% @orders.each do |order| %>
          <div class="card mb-4 shadow-sm">
            <div class="card-header bg-light">
              <div class="row align-items-center">
                <div class="col-md-3">
                  <strong>Order #<%= order.id %></strong>
                </div>
                <div class="col-md-3">
                  <small class="text-muted">
                    <i class="fas fa-calendar me-1"></i>
                    <%= order.created_at.strftime("%B %d, %Y") %>
                  </small>
                </div>
                <div class="col-md-3">
                  <span class="badge bg-<%= order_status_class(order.status) %> fs-6">
                    <%= order.status.humanize %>
                  </span>
                </div>
                <div class="col-md-3 text-end">
                  <strong class="text-success">$<%= order.total %></strong>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-8">
                  <h6 class="mb-2">Items Ordered:</h6>
                  <% order.order_items.each do |item| %>
                    <div class="d-flex align-items-center mb-2">
                      <img src="<%= item.product.image_url %>" alt="<%= item.product.name %>" 
                           style="width: 40px; height: 40px; object-fit: cover;" class="rounded me-3">
                      <div class="flex-grow-1">
                        <strong><%= item.product.name %></strong>
                        <small class="text-muted d-block">
                          Size: <%= item.product.size %> | Qty: <%= item.quantity %> | 
                          $<%= item.price %> each
                        </small>
                      </div>
                      <div class="text-end">
                        <strong>$<%= item.quantity * item.price %></strong>
                      </div>
                    </div>
                  <% end %>
                </div>
                <div class="col-md-4">
                  <h6 class="mb-2">Shipping Information:</h6>
                  <div class="small">
                    <div><%= order.shipping_name %></div>
                    <div><%= order.shipping_address %></div>
                    <div><%= order.shipping_city %>, <%= order.province.name %></div>
                    <div><%= order.shipping_postal_code %></div>
                  </div>
                  
                  <div class="mt-3">
                    <%= link_to "View Details", order_path(order), class: "btn btn-outline-primary btn-sm" %>
                    <% if order.status == 'pending' %>
                      <button class="btn btn-outline-warning btn-sm" disabled>
                        <i class="fas fa-clock me-1"></i>Processing
                      </button>
                    <% elsif order.status == 'shipped' %>
                      <button class="btn btn-outline-success btn-sm" disabled>
                        <i class="fas fa-truck me-1"></i>Shipped
                      </button>
                    <% end %>
                  </div>
                </div>
              </div>
              
              <!-- Order Summary -->
              <div class="row mt-3 pt-3 border-top">
                <div class="col-md-6">
                  <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    Tax: $<%= order.tax %> | Total: $<%= order.total %>
                  </small>
                </div>
                <div class="col-md-6 text-end">
                  <small class="text-muted">
                    Last updated: <%= order.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                  </small>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Pagination -->
        <% if @orders.respond_to?(:total_pages) && @orders.total_pages > 1 %>
          <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Orders pagination">
              <ul class="pagination">
                <% if @orders.prev_page %>
                  <li class="page-item">
                    <%= link_to "Previous", orders_path(page: @orders.prev_page), class: "page-link" %>
                  </li>
                <% else %>
                  <li class="page-item disabled">
                    <span class="page-link">Previous</span>
                  </li>
                <% end %>

                <% (1..@orders.total_pages).each do |page| %>
                  <% if page == @orders.current_page %>
                    <li class="page-item active">
                      <span class="page-link"><%= page %></span>
                    </li>
                  <% elsif (page - @orders.current_page).abs <= 2 || page == 1 || page == @orders.total_pages %>
                    <li class="page-item">
                      <%= link_to page, orders_path(page: page), class: "page-link" %>
                    </li>
                  <% elsif (page - @orders.current_page).abs == 3 %>
                    <li class="page-item disabled">
                      <span class="page-link">...</span>
                    </li>
                  <% end %>
                <% end %>

                <% if @orders.next_page %>
                  <li class="page-item">
                    <%= link_to "Next", orders_path(page: @orders.next_page), class: "page-link" %>
                  </li>
                <% else %>
                  <li class="page-item disabled">
                    <span class="page-link">Next</span>
                  </li>
                <% end %>
              </ul>
            </nav>
          </div>
        <% end %>

      <% else %>
        <!-- Empty state -->
        <div class="text-center py-5">
          <div class="mb-4">
            <i class="fas fa-shopping-bag fa-5x text-muted"></i>
          </div>
          <h3 class="text-muted">No Orders Yet</h3>
          <p class="text-muted mb-4">You haven't placed any orders yet. Start shopping to see your orders here!</p>
          <%= link_to "Start Shopping", products_path, class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
