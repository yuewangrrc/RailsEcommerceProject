<% content_for :title, "Edit #{@page.title}" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Edit <%= @page.title %></h1>
  <%= link_to "Back to Pages", admin_pages_path, class: "btn btn-outline-secondary" %>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Page Content</h5>
      </div>
      <div class="card-body">
        <%= form_with model: [:admin, @page], url: admin_page_path(@page.slug), method: :patch, local: true do |f| %>
          <% if @page.errors.any? %>
            <div class="alert alert-danger">
              <h6>Please fix the following errors:</h6>
              <ul class="mb-0">
                <% @page.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :content, "Page Content", class: "form-label" %>
            <%= f.text_area :content, rows: 20, class: "form-control", 
                style: "font-family: monospace;" %>
            <div class="form-text">
              You can use HTML tags for formatting. Be careful with the HTML structure.
            </div>
          </div>

          <div class="d-flex gap-2">
            <%= f.submit "Update Page", class: "btn btn-primary" %>
            <%= link_to "Preview", 
                @page.slug == 'about' ? about_path : contact_path, 
                class: "btn btn-outline-info", target: "_blank" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h6 class="mb-0">Page Information</h6>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-4">Slug:</dt>
          <dd class="col-sm-8"><code><%= @page.slug %></code></dd>
          
          <dt class="col-sm-4">URL:</dt>
          <dd class="col-sm-8">
            <code>/<%= @page.slug %></code>
          </dd>
          
          <dt class="col-sm-4">Created:</dt>
          <dd class="col-sm-8">
            <small><%= @page.created_at.strftime("%B %d, %Y") %></small>
          </dd>
          
          <dt class="col-sm-4">Updated:</dt>
          <dd class="col-sm-8">
            <small><%= @page.updated_at.strftime("%B %d, %Y") %></small>
          </dd>
        </dl>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-header">
        <h6 class="mb-0">HTML Tips</h6>
      </div>
      <div class="card-body">
        <small>
          <strong>Common HTML tags:</strong><br>
          <code>&lt;h3&gt;Heading&lt;/h3&gt;</code><br>
          <code>&lt;p&gt;Paragraph&lt;/p&gt;</code><br>
          <code>&lt;strong&gt;Bold&lt;/strong&gt;</code><br>
          <code>&lt;em&gt;Italic&lt;/em&gt;</code><br>
          <code>&lt;ul&gt;&lt;li&gt;List item&lt;/li&gt;&lt;/ul&gt;</code>
        </small>
      </div>
    </div>
  </div>
</div>
