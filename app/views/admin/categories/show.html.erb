<% content_for :title, @category.name %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><%= @category.name %></h1>
  <div>
    <%= link_to "Edit", edit_admin_category_path(@category), class: "btn btn-primary" %>
    <%= link_to "Back to Categories", admin_categories_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5>Category Details</h5>
      </div>
      <div class="card-body">
        <p><strong>Name:</strong> <%= @category.name %></p>
        <% if @category.description.present? %>
          <p><strong>Description:</strong></p>
          <p><%= @category.description %></p>
        <% end %>
        <p><strong>Products:</strong> <%= @category.products.count %></p>
        <p><strong>Created:</strong> <%= @category.created_at.strftime("%B %d, %Y") %></p>
        <p><strong>Last Updated:</strong> <%= @category.updated_at.strftime("%B %d, %Y") %></p>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5>Products in this Category (<%= @products.total_count %>)</h5>
        <%= link_to "Add Product", new_admin_product_path(category_id: @category.id), class: "btn btn-sm btn-primary" %>
      </div>
      <div class="card-body">
        <% if @products.any? %>
          <div class="row">
            <% @products.each do |product| %>
              <div class="col-lg-6 col-md-12 mb-3">
                <div class="card">
                  <div class="row g-0">
                    <div class="col-4">
                      <img src="<%= product.image_url %>" class="img-fluid rounded-start h-100" style="object-fit: cover;" alt="<%= product.name %>">
                    </div>
                    <div class="col-8">
                      <div class="card-body p-3">
                        <h6 class="card-title"><%= product.name %></h6>
                        <p class="card-text">
                          <small>Size: <%= product.size %></small><br>
                          <strong>$<%= product.price %></strong>
                        </p>
                        <div class="btn-group btn-group-sm" role="group">
                          <%= link_to "View", admin_product_path(product), class: "btn btn-outline-info" %>
                          <%= link_to "Edit", edit_admin_product_path(product), class: "btn btn-outline-primary" %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <!-- Pagination -->
          <div class="d-flex justify-content-center mt-4">
            <%= paginate @products %>
          </div>
        <% else %>
          <div class="text-center py-5">
            <h6>No products in this category yet</h6>
            <p class="text-muted">Start by adding some products to this category.</p>
            <%= link_to "Add Product", new_admin_product_path(category_id: @category.id), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
