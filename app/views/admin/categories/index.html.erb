<% content_for :title, "Manage Categories" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Manage Categories</h1>
  <%= link_to "Add New Category", new_admin_category_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Products Count</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>
                <strong><%= category.name %></strong>
              </td>
              <td>
                <%= truncate(category.description, length: 80) if category.description %>
              </td>
              <td>
                <span class="badge bg-info"><%= category.products.count %> products</span>
              </td>
              <td>
                <%= category.created_at.strftime("%B %d, %Y") %>
              </td>
              <td>
                <%= link_to "View", admin_category_path(category), class: "btn btn-sm btn-outline-info" %>
                <%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-sm btn-outline-primary" %>
                <% if category.products.empty? %>
                  <%= link_to "Delete", admin_category_path(category), method: :delete, 
                      class: "btn btn-sm btn-outline-danger", 
                      confirm: "Are you sure you want to delete this category?" %>
                <% else %>
                  <button class="btn btn-sm btn-outline-danger" disabled title="Cannot delete category with products">Delete</button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @categories.empty? %>
      <div class="text-center py-5">
        <h5>No categories yet</h5>
        <p class="text-muted">Start by creating your first category.</p>
        <%= link_to "Create Category", new_admin_category_path, class: "btn btn-primary" %>
      </div>
    <% end %>

    <!-- Pagination -->
    <% if @categories.respond_to?(:current_page) %>
      <div class="d-flex justify-content-center mt-4">
        <%= paginate @categories %>
      </div>
    <% end %>
  </div>
</div>
