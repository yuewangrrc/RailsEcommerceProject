<% content_for :title, "Edit Product" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Edit Product</h1>
  <div>
    <%= link_to "View Product", admin_product_path(@product), class: "btn btn-outline-info" %>
    <%= link_to "Back to Products", admin_products_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <%= form_with model: [:admin, @product], local: true, multipart: true, class: "row g-3" do |f| %>
      <% if @product.errors.any? %>
        <div class="col-12">
          <div class="alert alert-danger">
            <h6>Please fix the following errors:</h6>
            <ul class="mb-0">
              <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="col-md-6">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="col-md-6">
        <%= f.label :category_id, "Category", class: "form-label" %>
        <%= f.collection_select :category_id, @categories, :id, :name, 
            { prompt: "Select a category" }, { class: "form-select" } %>
      </div>

      <div class="col-md-4">
        <%= f.label :price, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <%= f.number_field :price, step: :any, class: "form-control" %>
        </div>
      </div>

      <div class="col-md-4">
        <%= f.label :size, class: "form-label" %>
        <%= f.text_field :size, class: "form-control" %>
      </div>

      <div class="col-md-4">
        <%= f.label :stock, class: "form-label" %>
        <%= f.number_field :stock, class: "form-control" %>
      </div>

      <!-- Current Images -->
      <% if @product.images.attached? %>
        <div class="col-12">
          <label class="form-label">Current Images</label>
          <div class="row">
            <% @product.images.each_with_index do |image, index| %>
              <div class="col-md-3 mb-3">
                <div class="card">
                  <%= image_tag image, class: "card-img-top", style: "height: 150px; object-fit: cover;" %>
                  <div class="card-body p-2">
                    <div class="d-flex justify-content-between align-items-center">
                      <small class="text-muted">Image <%= index + 1 %></small>
                      <%= link_to "Remove", admin_product_image_path(@product, image), 
                          method: :delete,
                          data: { 
                            turbo_method: :delete,
                            turbo_confirm: "Are you sure you want to remove this image?" 
                          },
                          class: "btn btn-sm btn-outline-danger" %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Image Upload -->
      <div class="col-12">
        <div class="row">
          <div class="col-md-6">
            <%= f.label :image_url, "Image URL (Optional)", class: "form-label" %>
            <%= f.url_field :image_url, class: "form-control" %>
            <div class="form-text">Enter a URL for the product image (fallback option)</div>
          </div>
          <div class="col-md-6">
            <%= f.label :images, "Upload New Images", class: "form-label" %>
            <%= f.file_field :images, multiple: true, accept: "image/*", class: "form-control" %>
            <div class="form-text">Select one or more additional product images (JPG, PNG, GIF)</div>
          </div>
        </div>
      </div>

      <div class="col-12">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, rows: 4, class: "form-control" %>
      </div>

      <div class="col-12">
        <%= f.submit "Update Product", class: "btn btn-primary" %>
        <%= link_to "Cancel", admin_product_path(@product), class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
