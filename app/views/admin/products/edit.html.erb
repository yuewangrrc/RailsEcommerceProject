<% content_for :title, "Edit Product" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Edit Product</h1>
  <div>
    <%= link_to "View Product", admin_product_path(@product), class: "btn btn-outline-info" %>
    <%= link_to "Back to Products", admin_products_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <%= form_with model: [:admin, @product], local: true, class: "row g-3" do |f| %>
      <% if @product.errors.any? %>
        <div class="col-12">
          <div class="alert alert-danger">
            <h6>Please fix the following errors:</h6>
            <ul class="mb-0">
              <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="col-md-6">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="col-md-6">
        <%= f.label :category_id, "Category", class: "form-label" %>
        <%= f.collection_select :category_id, @categories, :id, :name, 
            { prompt: "Select a category" }, { class: "form-select" } %>
      </div>

      <div class="col-md-4">
        <%= f.label :price, class: "form-label" %>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <%= f.number_field :price, step: :any, class: "form-control" %>
        </div>
      </div>

      <div class="col-md-4">
        <%= f.label :size, class: "form-label" %>
        <%= f.text_field :size, class: "form-control" %>
      </div>

      <div class="col-md-4">
        <%= f.label :stock, class: "form-label" %>
        <%= f.number_field :stock, class: "form-control" %>
      </div>

      <div class="col-12">
        <%= f.label :image_url, "Image URL", class: "form-label" %>
        <%= f.url_field :image_url, class: "form-control" %>
        <div class="form-text">Enter a URL for the product image</div>
      </div>

      <div class="col-12">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_area :description, rows: 4, class: "form-control" %>
      </div>

      <div class="col-12">
        <%= f.submit "Update Product", class: "btn btn-primary" %>
        <%= link_to "Cancel", admin_product_path(@product), class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
