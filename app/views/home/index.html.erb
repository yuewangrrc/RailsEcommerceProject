<!-- Hero Section -->
<section class="hero-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <h1 class="display-4 mb-4">Welcome to Swimi</h1>
        <p class="lead mb-4">Discover the perfect swimwear for every occasion. From competitive swimming to beach days, we have you covered.</p>
        <%= link_to "Shop Now", products_path, class: "btn btn-light btn-lg" %>
      </div>
    </div>
  </div>
</section>

<!-- Categories Section -->
<section class="py-5">
  <div class="container">
    <h2 class="text-center mb-5">Shop by Category</h2>
    <div class="row">
      <% @categories.each do |category| %>
        <div class="col-md-3 mb-4">
          <div class="card h-100">
            <div class="card-body text-center">
              <h5 class="card-title"><%= category.name %></h5>
              <p class="card-text">Explore our collection of <%= category.name.downcase %></p>
              <%= link_to "View Products", category_path(category), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Featured Products Section -->
<section class="py-5 bg-light">
  <div class="container">
    <h2 class="text-center mb-5">Featured Products</h2>
    <div class="row">
      <% @featured_products.each do |product| %>
        <div class="col-md-4 mb-4">
          <div class="card product-card">
            <img src="<%= product.image_url %>" class="card-img-top product-image" alt="<%= product.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= truncate(product.description, length: 100) %></p>
              <div class="d-flex justify-content-between align-items-center">
                <span class="price">$<%= product.price %></span>
                <%= link_to "View Details", product_path(product), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-center mt-4">
      <%= link_to "View All Products", products_path, class: "btn btn-outline-primary btn-lg" %>
    </div>
  </div>
</section>
